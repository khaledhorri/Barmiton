{% extends 'base.html.twig' %}


{% block title %}S'inscrire' !{% endblock %}

{% block body %}

{% if app.user %}

<div class="alert-danger">Vous êtes déjà inscrit</div>

{% else %}

<h1>Inscription</h1>

{{ form_start(formRegistration) }}

{{ form_row(formRegistration.username, {'attr': {'placeholder': 'Nom d\'utilisateur'}, 'label': 'Nom d\'utilisateur'}) }}
{{ form_row(formRegistration.email, {'attr': {'placeholder': 'Adresse email'}, 'label': 'Email'}) }}
{{ form_row(formRegistration.password, {'attr': {'placeholder': 'Mot de passe'}, 'label': 'Mot de passe'}) }}
{{ form_row(formRegistration.confirm_password, {'attr': {'placeholder': 'Confirmer le mot de passe'}, 'label': 'Confirmer le mot de passe'}) }}

<button type="submit" class="btn btn-primary">Inscription</button>

{{ form_end(formRegistration) }}

{% endif %}

{% endblock %}
